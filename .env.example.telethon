# API credentials от https://my.telegram.org
API_ID=your_api_id_here
API_HASH=your_api_hash_here

# Токен бота от @BotFather
BOT_TOKEN=your_bot_token_here

# Номер телефона для UserBot (формат: +79991234567)
# Нужен ТОЛЬКО для первой авторизации
PHONE=+your_phone_number

# Список каналов (ID или @username), разделенных запятой
CHANNELS=@channel1,@channel2,@channel3

# Глубина поиска (количество последних сообщений в каждом канале)
SEARCH_LIMIT=1000
